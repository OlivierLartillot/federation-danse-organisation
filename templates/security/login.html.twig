<div class="space">
    <div class="container d-flex justify-content-center">
        <div class="col-lg-6 col-xl-5">
        <form method="post" class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Tu es connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se Déconnecter</a>
                </div>
            {% endif %}
            {# <form action="mail.php" method="POST" class="login-form ajax-contact"> #}
                <h5 class="form-title">Se Connecter</h5>
                <div class="row">
                    <div class="form-group">
                        <label for="username">Pseudo</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control style-white" autocomplete="username" required autofocus>
                        <i class="fal fa-user"></i>
                    </div>
                    <div class="form-group style-3">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control style-white" autocomplete="current-password" required>
                            <i class="fa-solid fa-eye-slash"></i>
                    </div>


                    <!-- REMEMBER ME SECTION -->
                    <!--=====================-->
                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html
                        #}
                        <div class="form-group col-6 text-start align-self-center">
                            <input class="style2" type="checkbox" name="_remember_me"  id="_remember_me">
                            
                            <label for="_remember_me">Se rappeler de moi (3jours)</label>
                        </div>
                    <!--=====================-->
                    <!-- FIN REMEMBER ME SECTION -->
                    {#                     
