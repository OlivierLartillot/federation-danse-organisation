                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-btn col-12 text-center">
                        <button class="th-btn w-100" type="submit">
                            Sign in
                        </button>
                    </div>
                </div>
            </form>
        </div>
    
    
