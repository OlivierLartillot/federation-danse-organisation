                    <div class="col-xl-6">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade active show" id="nav-1st" role="tabpanel">
                                <div class="event-item">
                                    <div class="event-item_wrapper">
                                        <div class="event-item-wrapp">
                                            <div class="event-item_content">
                                                <div class="event-item_list">
                                                    <h3 class="event-item_title">{{ club.name }}</h3>
                                                    <span class="event-item_time"><i class="fa-solid fa-user text-danger"></i>{{ club.correspondents is defined ? club.correspondents : "-" }}</span>
                                                </div>
                                            </div>
                                            <p class="event-item_text"><i class="fa-solid fa-house text-danger"></i> 
                                                {{ club.adress is defined and club.adress is not null ? club.adress : "-" }}
                                            </p>
                                            <p class="event-item_text"><i class="fa-solid fa-phone text-danger"></i> 
                                                {{ club.phonePrimary is defined and club.phonePrimary is not null ? club.phonePrimary : "-" }} 
                                            </p>
                                            
                                            {% if club.phoneSecondary is defined and club.phoneSecondary is not null %}
                                                <p class="event-item_text"><i class="fa-solid fa-phone text-danger"></i> 
                                                   {{club.phoneSecondary}}
                                                </p>
                                            {% endif %}

                                            <p class="event-item_text"><i class="fa-solid fa-envelope text-danger"></i> 
                                                {{ club.emailPrimary is defined and club.emailPrimary is not null ? club.emailPrimary : "-" }} 
                                            </p>

                                            {% if club.emailSecondary is defined and club.emailSecondary is not null %}
                                            <p class="event-item_text"><i class="fa-solid fa-envelope text-danger"></i> 
                                                {{  club.emailSecondary }} 
                                            </p>
                                            {% endif %}

                                            {% if club.fax is defined and club.fax is not null %}
                                                <p class="event-item_text"><i class="fa-solid fa-fax text-danger"></i> </i> 
                                                    {{  club.fax }} 
                                                </p>
                                            {% endif %}

                                            <p class="event-item_text"><i class="fa-solid fa-globe text-danger"></i></i> 
                                                {{ club.website is defined and club.website is not null ? club.website : "-" }} 
                                            </p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {# END FOREACH  #}
            </div>
        </div>
    </div>



