{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

<div class="container">
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>MinAge</th>
                <th>MaxAge</th>
                <th>NbMin</th>
                <th>NbMax</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.minAge }}</td>
                <td>{{ category.maxAge }}</td>
                <td>{{ category.nbMin }}</td>
                <td>{{ category.nbMax }}</td>
                <td>
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}">Create new</a>
</div>
{% endblock %}
