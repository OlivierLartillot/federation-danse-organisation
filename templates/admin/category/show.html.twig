{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container my-5">

    <h3 class="my-5">Catégorie </h3>
    
    <div class="d-inline-flex">
        <div class="me-2"><a href="{{ path('app_admin_category_index') }}" class="btn btn-sm btn-secondary">Retour liste des catégories</a></div>
        <div class="me-2"><a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-success">Modifier</a></div>
        <div class="mx-5">{{ include('admin/category/_archived_form.html.twig') }}</div>
    </div>
    
    
    

    <div class="card my-3 p-3 shadow"> 
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th>Age Minimum</th>
                        <td>{{ category.minAge }}</td>
                    </tr>
                    <tr>
                        <th>Age Maximum</th>
                        <td>{{ category.maxAge }}</td>
                    </tr>
                    <tr>
                        <th>Nombre Minimum</th>
                        <td>{{ category.nbMin }}</td>
                    </tr>
                    <tr>
                        <th>Nombre Maximum</th>
                        <td>{{ category.nbMax }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


{% endblock %}
