        <div class="d-flex ">
            <div class="me-3">
                <a href="{{ path('app_admin_document_new') }}" class="btn btn-success btn-sm">Envoyer un nouveau document</a>
            </div>
        </div>

        <div class="card my-3 p-3 shadow">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Ordre d'affichage</th>
                            <th>Publié</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set iNbre = 1 %}
                        {% for document in documents|sort((a, b) => a.apparitionOrder <=> b.apparitionOrder) %}

                            <tr>
                                <td>{{ iNbre }}</td>
                                <td>{{ document.name }}</td>
                                <td>{{ document.apparitionOrder }}</td>
                                <td class="{{ document.published ? 'text-success' : 'text-danger' }}">{{ document.published ? 'Oui' : 'Non' }}</td>
                                <td>             
                                    <a href="{{ path('app_admin_document_edit', {'id': document.id}) }}" class="mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                    {# <a href="{{ path('app_admin_document_show', {'id': document.id}) }}" class="mx-2"><i class="fa-solid fa-eye"></i></a> #}
                                </td>
                            </tr>
                        {% set iNbre = iNbre + 1 %}

                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
</div>

