{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <h1>Document index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DocumentPath</th>
                <th>ApparitionOrder</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.name }}</td>
                <td>{{ document.documentPath }}</td>
                <td>{{ document.apparitionOrder }}</td>
                <td>{{ document.published ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_document_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('app_admin_document_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_document_new') }}">Create new</a>
{% endblock %}
