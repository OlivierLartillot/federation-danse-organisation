{% extends 'base.html.twig' %}

{% block title %}Danseur index{% endblock %}

{% block body %}
    <h1>Danseur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthday</th>
                <th>Archived</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for danseur in danseurs %}
            <tr>
                <td>{{ danseur.id }}</td>
                <td>{{ danseur.firstname }}</td>
                <td>{{ danseur.lastname }}</td>
                <td>{{ danseur.birthday ? danseur.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ danseur.archived ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_danseur_show', {'id': danseur.id}) }}">show</a>
                    <a href="{{ path('app_admin_danseur_edit', {'id': danseur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_danseur_new') }}">Create new</a>
{% endblock %}
