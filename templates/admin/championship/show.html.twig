{% extends 'base.html.twig' %}

{% block title %}Championship{% endblock %}

{% block body %}
<div class="container my-5">

    <h3 class="my-5">Championnat </h3>
 

    <div class="d-inline-flex">
        <div class="me-2"><a href="{{ path('app_admin_championship_index') }}" class="btn btn-sm btn-secondary">Retour liste Championnats</a></div>
        <div class="me-2"><a href="{{ path('app_admin_championship_edit', {'id': championship.id}) }}" class="btn btn-sm btn-success">Modifier</a></div>
        <div class="mx-5">{{ include('admin/championship/_delete_form.html.twig') }}    </div>
    </div>



    <div class="card my-3 p-3 shadow">


        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ championship.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ championship.organizingClub }}</td>
                </tr>
                <tr>
                    <th>Date du Championnat</th>
                    <td>{{ championship.championshipDate ? championship.championshipDate|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Date Limite d'inscription</th>
                    <td>{{ championship.championshipInscriptionsLimitDate ? championship.championshipInscriptionsLimitDate|date('d-m-Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Lieu</th>
                    <td>{{ championship.place }}</td>
                </tr>
                <tr>
                    <th>Inscriptions Ouvertes</th>
                    <td>{{ championship.openRegistration ? 'Oui' : 'Non'}}</td>
                </tr>

            </tbody>
        </table>
    </div>
</div>

{% endblock %}
