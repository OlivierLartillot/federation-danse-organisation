{{ form_start(form) }}
   <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
       <div class="col-12">
            {{ form_row(form.name) }}
        </div>
    </div>
    <div class="row mt-3">
       
       <div class="form-group col-12 ms-3 mt-3">
            <div class="">
                {{ form_widget(form.isCurrentSeason) }}
                {{ form_label(form.isCurrentSeason) }}

                <small>{{ form_help(form.isCurrentSeason) }}</small>

                <div class="form-error">
                    {{ form_errors(form.isCurrentSeason) }}
                </div>
            </div>
        </div>
    </div>

    <button class="btn btn-success my-3">{{ button_label|default('Enregistrer') }}</button>


{{ form_end(form) }}
